<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ProyectoReservaCanchasMAUI.ViewModels"
             xmlns:services="clr-namespace:ProyectoReservaCanchasMAUI.Services"
             xmlns:data="clr-namespace:ProyectoReservaCanchasMAUI.Data"
             x:Class="ProyectoReservaCanchasMAUI.Views.FacultadPage"
             Title="Facultades">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Nombre Facultad" Text="{Binding NuevaFacultad.Nombre}" />
            <Entry Placeholder="Campus ID" Keyboard="Numeric" Text="{Binding NuevaFacultad.CampusId}" />

            <Button Text="Guardar" Command="{Binding GuardarCommand}" />
            <Button Text="Cargar" Command="{Binding CargarCommand}" />
            <Button Text="Eliminar" Command="{Binding EliminarCommand}" />

            <Label Text="Lista de Facultades" FontAttributes="Bold" FontSize="Medium" />
            <CollectionView ItemsSource="{Binding ListaFacultades}"
                            SelectionMode="Single"
                            SelectedItem="{Binding FacultadSeleccionada, Mode=TwoWay}"
                            HeightRequest="500">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" HasShadow="True" CornerRadius="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="Medium"/>
                                <Label Text="Campus ID: {Binding CampusId}" FontSize="Small"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>