<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoReservaCanchasMAUI.Views.FacultadPage"
             Title="Facultades">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Nombre de Facultad"
                   Text="{Binding NuevaFacultad.Nombre}" />

            <Label Text="Campus" />
            <Picker ItemsSource="{Binding ListaCampus}"
                    ItemDisplayBinding="{Binding Nombre}"
                    SelectedItem="{Binding CampusSeleccionado}" />

            <Button Text="Guardar" Command="{Binding GuardarCommand}" />
            <Button Text="Cargar" Command="{Binding CargarCommand}" />
            <Button Text="Eliminar" Command="{Binding EliminarCommand}" />

            <Label Text="Lista de Facultades" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding ListaFacultades}"
                            SelectionMode="Single"
                            SelectedItem="{Binding FacultadSeleccionada, Mode=TwoWay}"
                            HeightRequest="500">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" HasShadow="True" CornerRadius="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                <Label Text="{Binding NombreCampus}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
